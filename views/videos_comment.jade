.comment_container
    .comment_title='评论(100)'
    .comment_input_container
        img.user_img(src='../images/person_pin.png')
        textarea.user_comment(placeholder='发表公开评论', onfocus='javascript:comment_focus()', onblur='javascript:comment_blur()')
    button.comment_commit
        .comment_commit_text='发表评论'
    .comment_list_container
        ul.comment_list_ul
            li.comment_list_li
                .other_user_comment_main_container
                    .other_user_img_container
                        img.other_user_img(src='../images/person_pin.png')
                    .other_user_comment_container
                        .comment_info_container
                            a.username(href='#')
                                .username_text='用户名'
                            .comment_date='1小时前'
                        .comment_info='评论暂时'
                        .comment_likes_container
                            .comment_reply_text='回复 |'
                            a.comment_likes_number(href='#')
                                .comment_likes_number_text='88'
                            img.comment_likes(src='../images/person_pin.png')
                            img.comment_dislikes(src='../images/person_pin.png')
                        .reply_container
                            ul.reply_ul
                                li.reply_li
                                    .other_user_reply_container
                                        .reply_username_container
                                            a.username(href='#')
                                                .username_text='用户名'
                                            .username_text_colon=':'
                                        .reply_text_container
                                            .reply_text='回复暂时'
                                            .reply_date='55分钟前'
                                li.reply_li
                                    .other_user_reply_container
                                        .reply_username_container
                                            a.username(href='#')
                                                .username_text='用户名'
                                            .username_text_colon=':'
                                        .reply_text_container
                                            .reply_text='回复暂时'
                                            .reply_date='55分钟前'
                            a.view_reply(href='#')
                                .view_reply_text='查看回复'
            li.comment_list_li
                .other_user_comment_main_container
                    .other_user_img_container
                        img.other_user_img(src='../images/person_pin.png')
                    .other_user_comment_container='评论暂时'