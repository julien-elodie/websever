doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport',
            content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        link(rel='icon' href='/favicon.ico' type='image/x-icon')
        link(rel='stylesheet', href='/stylesheets/default.css')
        link(rel='stylesheet', href='/stylesheets/YouTube_nav.css')
        link(rel='stylesheet', href='/stylesheets/login.css')
        link(rel='stylesheet', href='/stylesheets/YouTube_bottom.css')
        script(type='text/javascript', src='/javascripts/jquery-3.2.1.min.js')
        script(type='text/javascript', src='/javascripts/login_focus.js')
        // script(type='text/javascript', src='/javascripts/login_submit.js')
        script(type='text/javascript', src='/javascripts/gt.js')
        script(type='text/javascript', src='/javascripts/validation.js')
        title='login'
    body
        .nav
            include YouTube_nav
        .center
            .center_container
                .login_container
                    span.login_title
                        img.login_img(src="../images/devices.png", alt="")
                    span.login_center
                        //.login_title='login :'
                        form.login(action="" method="")
                            span.login_username_text='用户名 :'
                            input.username(type="text" name="username" placeholder="用户名" onfocus='javascript:login_username_focus()' onblur='javascript:login_username_blur()')
                            span.username_hint_container
                                //.username_hint='用户名错误!'
                            span.login_password_text='密码 :'
                            input.password(type="password" name="password" placeholder="密码" onfocus='javascript:login_password_focus()' onblur='javascript:login_password_blur()')
                            span.password_hint_container
                                //.password_hint='密码错误!'                        
                            // input.submit(type="submit" value="Login" onclick='javascript:login_submit()')
                            #submit.submit
                                .submit_text='Login'
                        span.forget_password
                            a.forget_password_a(href="#")
                                .forget_password_div='forget password?'        
        .bottom
            include YouTube_bottom